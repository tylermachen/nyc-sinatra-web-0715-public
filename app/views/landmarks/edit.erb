<form action="/landmarks/<%= @landmark.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="name">Name</label>
  <input type="text" name="landmark[name]" id="name"
         value="<%= @landmark.name %>">
  <label for="year_completed">Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="year_completed"
         value="<%= @landmark.year_completed %>">
  <input type="submit" value="Submit">
</form>
<a href="/landmarks/<%= @landmark.id %>">Cancel</a>
